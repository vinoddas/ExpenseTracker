<TableRow xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/summary_row_date"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>
    <TextView
        android:id="@+id/summary_row_amount"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>
    <TextView
        android:id="@+id/summary_row_category"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>
    <TextView
        android:id="@+id/summary_row_by"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>
    <TextView
        android:id="@+id/summary_row_description"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>
    <Button
        android:id="@+id/summary_row_edit"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="@string/edit_button"
        android:visibility="gone"/>
    <Button
        android:id="@+id/summary_row_delete"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="@string/delete_button"
        android:visibility="gone"/>


</TableRow>
